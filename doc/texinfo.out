;;;
;;;    Footer of the TeXinfo document
;;;
<define-tag footer>;;;
@summarycontents
@contents
@bye
</define-tag>

;;;
;;;    Description of MP4H tags
;;;
<define-tag tag:description endtag=required whitespace=delete>
<preserve complex>
<preserve verbatim>
<set-var complex=*>
<set-var verbatim=*>
<set-var %attributes>
<set-var list-attributes[]="%body">
<subst-in-var list-attributes "^\n" "">
<group "@multitable {qqqqqqqqqqqqqqqqq} {Complex} {attributes} {qqqqqqqqqqq}
@item Name @tab Complex @tab Verbatim attributes @tab Attributes
@item %0 @tab <if <get-var complex> N Y> @tab <if <get-var verbatim> N Y> @tab 
    <foreach attr list-attributes>@code{<get-var attr>} </foreach>
@end multitable
">
<restore verbatim>
<restore complex>
</define-tag>

<define-tag var>@var{%attributes}</define-tag>
;;;
;;;    Paragraphs
;;;
<define-tag para endtag=required>
%body
</define-tag>

;;;
;;;    Notes
;;;
<define-tag note endtag=required>;;;
<para>@b{<lang:note>}: %body</para></define-tag>

;;;
;;;    Example of MP4H code
;;;
<define-tag example endtag=required attributes=verbatim>

@example
Source code:
%ubody

Output:
%body
@end example

@noindent
</define-tag>

;;;
;;;    HTML Comments
;;;
<define-tag html:comment endtag=required>
_LT_!--%body--_GT_
</define-tag>

<define-tag pre endtag=required>
%body
</define-tag>

