##
##  Makefile -- MP4H Documentation
##

@SET_MAKE@
SHELL   = /bin/sh
RM      = rm -f

SUBDIRS = fr en

# ------------------------------------------------
#   THE DEFAULT TARGETS
# ------------------------------------------------

default: all

all-recursive clean-recursive distclean-recursive:
	-@set -e; \
	set dummy $(MAKEFLAGS); amf=$$2; \
	for dir in $(SUBDIRS); do \
	    target=`echo $@ | sed s/-recursive//`; \
	    echo "===> $$dir ($$target)"; \
	    (cd $$dir && $(MAKE) $$target) \
	    || case "$$amf" in *=*) exit 1;; *k*) fail=yes;; *) exit 1;; esac; \
	    echo "<=== $$dir"; \
	done && test -z "$$fail"

all: all-recursive

clean: clean-recursive

distclean: distclean-recursive
	$(RM) Makefile

##EOF##
