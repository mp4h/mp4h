
;;;
;;;    Sectioning
;;;
<define-tag section>
@chapter %attributes
</define-tag>
<define-tag subsection>
@section %attributes
</define-tag>

;;;
;;;    Common names
;;;
<define-tag program>@code{%attributes}</define-tag>
<define-tag mp4h><program mp4h></define-tag>
<define-tag WML><program WML></define-tag>
<define-tag m4><program m4></define-tag>
<define-tag Meta-HTML><program Meta-HTML></define-tag>

;;;
;;;    Alias for writing URLs
;;;
<define-tag URL whitespace=delete>
<preserve name>
<preserve src>
<set-var %attributes>
<get-var name> @url{<get-var src>}
<restore src>
<restore name>
</define-tag>

;;;
