##
##  Makefile -- MP4H Documentation
##

@SET_MAKE@
SHELL = /bin/sh

top_srcdir      = @top_srcdir@
srcdir          = @srcdir@
tmpdir          = @tmpdir@
VPATH           = @srcdir@
LONG_VERSION    = @LONG_VERSION@

RM              = rm -f

# ------------------------------------------------
#   THE DEFAULT TARGETS
# ------------------------------------------------

all: mp4h.html

# ------------------------------------------------
#   DOCUMENTATION
# ------------------------------------------------

mp4h.html: mp4h.mp4h html.out ../src/mp4h
	sed -e 's|\@LONG_VERSION\@|$(LONG_VERSION)|g' < mp4h.mp4h \
	| ../src/mp4h > $@

# ------------------------------------------------
#   PROGRAM
# ------------------------------------------------

../src/mp4h:
	cd .. && $(MAKE)

# ------------------------------------------------
#   CLEANUP
# ------------------------------------------------

clean:
	$(RM) *.html

distclean: clean
	$(RM) Makefile

##EOF##
