##
##  Makefile -- packages
##
@SET_MAKE@

# ------------------------------------------------
#   DEFINITIONS
# ------------------------------------------------

SHELL           = /bin/sh

top_srcdir      = @top_srcdir@
srcdir          = @srcdir@
prefix          = @prefix@
VPATH           = @srcdir@

RM              = rm -f

SDP     =
SUBDIRS = \
   WML

RECURS_TARGET = \
   echo "===> $(SDP)$$dir ($$target)"; \
   (cd $$dir && $(MAKE) SDP="$(SDP)$$dir/" prefix=$(prefix) $$target) \
   || case "$$amf" in *=*) exit 1;; *k*) fail=yes;; *) exit 1;; esac; \
   echo "<=== $(SDP)$$dir"

# ------------------------------------------------
#   THE DEFAULT TARGET
# ------------------------------------------------
all install clean:
	@set -e; \
   set dummy $(MAKEFLAGS); amf=$$2; \
   for dir in $(SUBDIRS); do \
      target='$@'; $(RECURS_TARGET); \
   done && test -z "$$fail"

distclean:
	$(RM) Makefile

##EOF##
