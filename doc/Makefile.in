##
##  Makefile -- mp4h Documentation
##

@SET_MAKE@
SHELL = /bin/sh

top_srcdir      = @top_srcdir@
VPATH           = @srcdir@
PROGDIR         = $(top_srcdir)/src
PROGRAM         = $(PROGDIR)/mp4h
FLAGS           = -X 32
DEPS            = list-tags
TIDY            = @TIDY@

RM              = rm -f

# ------------------------------------------------
#   THE DEFAULT TARGETS
# ------------------------------------------------

all: $(PROGRAM) mp4h.html mp4h.1

install:
	@:

# ------------------------------------------------
#   DOCUMENTATION
# ------------------------------------------------

mp4h.html: mp4h.mp4h html.out
	$(PROGRAM) $(FLAGS) -D format=html mp4h.mp4h > $@
	$(TIDY) $(TIDYOPT) -m $@

mp4h.pod: mp4h.mp4h pod.out $(PROGRAM) $(DEPS)
	$(PROGRAM) $(FLAGS) -D format=pod mp4h.mp4h \
        | sed -e 's/_LT_/</g' -e 's/_GT_/>/g' > $@

mp4h.1: mp4h.pod
	pod2man --section=1 \
            --center="HTML Tools" \
            --release="HTML Tools" \
        mp4h.pod > $@

# ------------------------------------------------
#   PROGRAM
# ------------------------------------------------

$(PROGRAM):
	cd $(PROGDIR) && $(MAKE)

# ------------------------------------------------
#   CLEANUP
# ------------------------------------------------

clean:
	$(RM) *.pod *.1 *.html *.info *.texinfo

distclean: clean
	$(RM) Makefile

##EOF##
