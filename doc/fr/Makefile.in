##
##  Makefile -- mp4h Documentation
##

@SET_MAKE@
SHELL = /bin/sh

top_srcdir      = @top_srcdir@
VPATH           = @srcdir@
PROGDIR         = $(top_srcdir)/src
PROGRAM         = $(PROGDIR)/mp4h
INCDIR          = ..
DEPS            = ../list-tags
TIDY            = @TIDY@

RM              = rm -f

# ------------------------------------------------
#   THE DEFAULT TARGETS
# ------------------------------------------------

all: $(PROGRAM) mp4h.html mp4h.1

# ------------------------------------------------
#   DOCUMENTATION
# ------------------------------------------------

#   Do not rebuild HTML documentation
mp4h.html: mp4h.mp4h $(INCDIR)/html.out
	$(PROGRAM) -D format=html -I $(INCDIR) mp4h.mp4h > $@
	$(TIDY) $(TIDYOPT) -m $@

mp4h.pod: mp4h.mp4h $(INCDIR)/pod.out $(PROGRAM) $(DEPS)
	$(PROGRAM) -D format=pod -I $(INCDIR) mp4h.mp4h \
	| sed -e 's/_LT_/</g' -e 's/_GT_/>/g' > $@

mp4h.1: mp4h.pod
	pod2man --section=1 \
            --center="HTML Tools" \
            --release="HTML Tools" \
        mp4h.pod > $@

# ------------------------------------------------
#   PROGRAM
# ------------------------------------------------

$(PROGRAM):
	cd $(PROGDIR) && $(MAKE)

# ------------------------------------------------
#   CLEANUP
# ------------------------------------------------

clean:
	$(RM) *.pod *.1 *.html *.info *.texinfo

distclean: clean
	$(RM) Makefile

##EOF##
