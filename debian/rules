#!/usr/bin/make -f

DEB_BUILD_ARCH = any

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

build: build-stamp
build-stamp:
	dh_testdir
	./configure --prefix=/usr --with-tidy=/usr/bin/tidy
	$(MAKE)
	touch build-stamp

clean:
	dh_testdir
	-rm -f build-stamp install-stamp
	-[ ! -f Makefile ] || $(MAKE) clean
	dh_clean

install: install-stamp
install-stamp: build-stamp
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	$(MAKE) install prefix=`pwd`/debian/tmp/usr mandir=`pwd`/debian/tmp/usr/share/man
	touch install-stamp

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdocs README CREDITS doc/mp4h.html
	dh_installmanpages
	dh_installchangelogs ChangeLog
	dh_strip
	dh_compress
	dh_fixperms
	dh_shlibdeps
	dh_gencontrol
	dh_installdeb
	dh_md5sums
	dh_builddeb

binary-indep: build install
binary: binary-indep binary-arch

.PHONY: build clean binary-indep binary-arch binary
